  <link name="left_wheel">
    <!--origin xyz="0.1 0.13 0.1" rpy="0 1.5707 1.5707"/-->
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.130175" length="0.08255"/>
      </geometry>
    </collision>

    <visual name="left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.130175" length="0.08255"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
  </link>

  <link name="right_wheel">
    <!--origin xyz="0.1 -0.13 0.1" rpy="0 1.5707 1.5707"/-->
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.130175" length="0.08255"/>
      </geometry>
    </collision>

    <visual name="right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.130175" length="0.08255"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
  </link>

  <link name='full_assembly'>
  	<!--origin xyz="0.46116875 0.30861 1.311275" rpy="1.5708 0 1.5708"/-->
  	<origin xyz="0 0 0" rpy="1.5708 0 1.5708"/>
  	<collision name="collision">
  		<!--origin xyz="0.46116875 0.30861 1.311275" rpy="1.5708 0 1.5708"/-->
  		<origin xyz="0 0 0" rpy="1.5708 0 1.5708"/>
  		<geometry>
  			<box size="0.9223375 0.61722 2.62255"/>
  		</geometry>
  	</collision>

  	<visual name="full_assembly_visual">
  		<!--origin xyz="0.46116875 0.30861 1.311275" rpy="1.5708 0 1.5708"/-->
  		<origin xyz="0 0 0" rpy="1.5708 0 1.5708"/>
  		<geometry>
  			<mesh scale="0.002 0.002 0.002" filename="package://mybot_description/meshes/igvc_final_assembly.STL"/>
  		</geometry>
  	</visual>

  	<inertial>
  		<mass value="45.3592"/>                            <!-- 100 lbs estimate in kgs -->
  		<!--origin xyz="0.46116875 0.30861 1.311275" rpy="1.5708 0 1.5708"/-->
  		<origin xyz="0 0 0" rpy="1.5708 0 1.5708"/>

  		<!-- Ih = 1/12 * m * (w^2 + d^2)
  		     Iw = 1/12 * m * (d^2 + h^2)
  		     Id = 1/12 * m * (w^2 + h^2) -->

  		<inertia ixx="27.43751182" ixy="0" ixz="0" iyy="29.21312014" iyz="0" izz="4.65561912" />
  	</inertial>
  </link>


  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz=".4 0.2 0" rpy="0 0 0"/>
    <!--origin xyz="0.1 0.13 0" rpy="0 1.5707 1.5707"/-->
    <child link="left_wheel"/>
    <parent link="full_assembly"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz=".4 -0.2 0" rpy="0 0 0"/>
    <!--origin xyz="0.1 -0.13 0" rpy="0 1.5707 1.5707"/-->
    <child link="right_wheel"/>
    <parent link="full_assembly"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


  <link name="camera">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
      </geometry>
      <material name="green"/>
    </visual>

    <inertial>
      <mass value="${cameraMass}" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <box_inertia m="${cameraMass}" x="${cameraSize}" y="${cameraSize}" z="${cameraSize}" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz=".2 0 2" rpy="0 0.5 0"/>
    <parent link="full_assembly"/>
    <child link="camera"/>
  </joint>


  <joint name="hokuyo_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz=".15 0 .1" rpy="0 0 0"/>
    <parent link="full_assembly"/>
    <child link="hokuyo"/>
  </joint>

  <!-- Hokuyo Laser -->
  <link name="hokuyo">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://mybot_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>


</robot>

